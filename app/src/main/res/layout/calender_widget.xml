<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/calenderWidget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme.AppWidgetContainer">

    <TextView
        android:id="@+id/locationAndDateContainerTv3"
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:background="@drawable/prayer_background_red" />

    <TextView
        android:id="@+id/dayTv2"
        style="@style/prayerTableTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/locationAndDateContainerTv3"
        android:layout_alignTop="@id/locationAndDateContainerTv3"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="-10dp"
        android:text="15"
        android:textColor="@color/white"
        android:textSize="60sp"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/locationTv2"
        style="@style/prayerTableTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/locationAndDateContainerTv3"
        android:layout_alignRight="@id/locationAndDateContainerTv3"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="right"
        android:text="Ankara,Çankaya"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/monthWeekTv2"
        style="@style/prayerTableTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/locationAndDateContainerTv3"
        android:layout_alignBottom="@id/locationAndDateContainerTv3"
        android:layout_alignParentRight="false"
        android:layout_marginStart="11dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="195dp"
        android:layout_marginBottom="5dp"
        android:gravity="left"
        android:text="Eylül,Salı"
        android:textColor="@color/white"
        android:textSize="21sp"
        app:layout_constraintVertical_bias="0.71000004" />

    <TextView
        android:id="@+id/hijriTV2"
        style="@style/prayerTableTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/locationAndDateContainerTv3"
        android:layout_alignBottom="@id/locationAndDateContainerTv3"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="5dp"
        android:text="05/1446"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintVertical_bias="0.763" />

</RelativeLayout>